<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" type="image/ico" href="~/Content/assets/images/icon2.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    @Styles.Render("~/Content/vendor/bootstrap/css/bootstrap.min.css")
    @Styles.Render("~/Content/assets/css/templatemo-chain-app-dev.css")
    @Styles.Render("~/Content/assets/css/animated.css")
    @Styles.Render("~/Content/assets/css/owl.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- ***** Loading Start ***** -->
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ***** Loading End ***** -->
    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky wow slideInDown" data-wow-duration="0.75s" data-wow-delay="0s">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a class="logo">
                            <img src="~/Content/assets/images/icon2.png" alt="Task Manager"  style="height:70px;">
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            @*<li>@Html.ActionLink("Tasks", "Tasks", "Task")</li>
                                <li>@Html.ActionLink("Users", "Users", "User")</li>*@
                            <li><div class="gradient-button"><a id="modal_trigger" href="#modal"><i class="fa fa-sign-in-alt"></i> Sign In Now</a></div></li>
                        </ul>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->
    <div id="modal" class="popupContainer" style="display:none;width:30rem;">
        <div class="popupHeader">
            <span class="header_title">Login</span>
            <span class="modal_close"><i class="fa fa-times"></i></span>
        </div>

        <section class="popupBody">
            <!-- Social Login -->
            <div class="social_login">
                <div>
                    <a href="#" class="social_box fb">
                        <span class="icon"><i class="fab fa-facebook"></i></span>
                        <span class="icon_title">Connect with Facebook <code>(beta)</code></span>

                    </a>

                    <a href="#" class="social_box google">
                        <span class="icon"><i class="fab fa-google-plus"></i></span>
                        <span class="icon_title">Connect with Google <code>(beta)</code></span>
                    </a>
                </div>

                <div class="centeredText">
                    <span>Or use your Email address</span>
                </div>

                <div class="action_btns">
                    <div class="one_half"><a href="#" id="login_form" class="btn">Login</a></div>
                    <div class="one_half last"><a href="#" id="register_form" class="btn">Sign up</a></div>
                </div>
            </div>

            <!-- Username & Password Login form -->
            <div class="user_login">
                <form action="/Login/SignIn_Action" method="post">
                    <table class="table table-responsive table-hover">

                        <tr>
                            <td><label for="Email">Email</label></td>
                            <td><input type="email" name="Email" required /></td>
                        </tr>
                        <tr>
                            <td><label for="Password">Password</label></td>
                            <td><input type="password" name="Password" required /></td>
                        </tr>

                    </table>

                    <div class="action_btns">
                        <div class="one_half"><a href="#" class="btn back_btn"><i class="fa fa-angle-double-left"></i> Back</a></div>
                        <div class="one_half last">@Html.AntiForgeryToken()<button type="submit" class="btn btn_red" name="submitBtn" style="padding-left:4.3rem; padding-right:4.3rem;">Login <i class="fa fa-angle-double-right"></i></button></div>
                    </div>
                </form>

                <a href="#" class="forgot_password">Forgot password? <code>(beta)</code></a>
            </div>

            <!-- Register Form -->
            <div class="user_register">
                <form action="/Login/SignUp_Action" method="post">
                    <table class="table table-responsive table-hover">
                        <tr>
                            <td><label for="First Name">First Name</label></td>
                            <td><input type="text" name="FirstName" required /></td>
                        </tr>
                        <tr>
                            <td><label for="Last Name">Last Name</label></td>
                            <td><input type="text" name="LastName" required /></td>
                        </tr>
                        <tr>
                            <td><label for="Email">Email</label></td>
                            <td><input type="email" name="Email" required /></td>
                        </tr>
                        <tr>
                            <td><label for="Password">Password</label></td>
                            <td><input type="password" name="Password" required /></td>
                        </tr>
                        @*<tr>
                                <td><label for="UserType">User Type</label></td>
                                <td><input type="text" name="UserType" required /></td>
                            </tr>*@
                    </table>

                    <div class="action_btns">
                        <div class="one_half"><a href="#" class="btn back_btn"><i class="fa fa-angle-double-left"></i> Back</a></div>
                        <div class="one_half last">@Html.AntiForgeryToken() <button type="submit" class="btn btn_red" name="submitBtn" style="padding-left:3.7rem; padding-right:3.7rem;">Register <i class="fa fa-angle-double-right"></i></button></div>
                    </div>
                </form>
            </div>
        </section>
    </div>

    @RenderBody()

    <!-- ***** Footer Start ***** -->
    <footer id="newsletter">
        <div class="container">
            <div class="row wow fadeInDown" data-wow-duration="1s" data-wow-delay="0.5s">
                <div class="col-lg-8 offset-lg-2">
                    <div class="section-heading">
                        <h4>Join our mailing list to receive the news</h4>
                    </div>
                </div>
                <div class="col-lg-6 offset-lg-3">
                    <form id="search" action="/Home/NewsLetter_Action" method="post">
                        <div class="row">
                            <div class="col-lg-6 col-sm-6">
                                <fieldset>
                                    <input type="email" name="Email" class="email" placeholder="Email Address..." autocomplete="on" required>
                                </fieldset>
                            </div>
                            <div class="col-lg-6 col-sm-6">
                                <fieldset>
                                    @Html.AntiForgeryToken()<button type="submit" class="main-button">Subscribe Now<i class="fa fa-angle-right"></i></button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 wow fadeInLeft" data-wow-duration="1s" data-wow-delay="0.5s">
                    <div class="footer-widget">
                        <h4 style="margin-bottom:-0.2rem;">Contact Us</h4>
                        <hr style="color:snow;" />
                        <p>Cebu City, Cebu Philippines</p>
                        <p><a href="mailto: christianstewart5111@gmail.com">CStewart@TheLast</a></p>
                        <p><a href="https://discord.com/">Join Our Discord!</a></p>

                    </div>
                </div>
                <div class="col-lg-3 wow fadeInLeft" data-wow-duration="1s" data-wow-delay="0.5s">
                    <div class="footer-widget">
                        <h4 style="margin-bottom:-0.2rem;">About Us</h4>
                        <hr style="color:snow;" />
                        <ul>
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                        <ul>
                            <li>@Html.ActionLink("Tasks", "Login", "Login")</li>
                            @*<li>@Html.ActionLink("Users", "Login", "Login")</li>*@
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 wow fadeInRight" data-wow-duration="1s" data-wow-delay="0.5s">
                    <div class="footer-widget">
                        <h4 style="margin-bottom:-0.2rem;">Useful Links</h4>
                        <hr style="color:snow;" />
                        <ul>
                            <li><a href="https://visualstudio.microsoft.com/">App Engine</a></li>
                            <li><a href="https://docs.microsoft.com/en-us/dotnet/csharp/">Programming</a></li>
                            <li><a href="https://dotnet.microsoft.com/apps/aspnet">Development</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 wow fadeInRight" data-wow-duration="1s" data-wow-delay="0.5s">
                    <div class="footer-widget">
                        <h4 style="margin-bottom:-0.2rem;">About Our Company</h4>
                        <hr style="color:snow;" />
                        <div class="logo">
                            <img src="~/Content/assets/images/icon.png" alt="Task Manager" style="height:5%;">
                        </div>
                        <p>The Last Inc. aims to provide user-friendly web-based applications that simplifies user experience. Task Manager, is one of many applications created for such purpose.</p>
                    </div>
                </div>
                <div class="col-lg-12 wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.5s">
                    <div class="copyright-text">
                        <p>
                            Copyright © 2022 TheLast. All Rights Reserved.
                            <br>Design: Christian Stewart
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- ***** Footer End ***** -->
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Content/vendor/jquery/jquery.min.js")
    @Scripts.Render("~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js")
    @Scripts.Render("~/Content/assets/js/owl-carousel.js")
    @Scripts.Render("~/Content/assets/js/animation.js")
    @Scripts.Render("~/Content/assets/js/imagesloaded.js")
    @Scripts.Render("~/Content/assets/js/popup.js")
    @Scripts.Render("~/Content/assets/js/custom.js")
    @RenderSection("scripts", required: false)
</body>
</html>
